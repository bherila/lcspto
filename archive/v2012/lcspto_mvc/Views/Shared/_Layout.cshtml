<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Assets/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    @RenderSection("head", false)
</head>
<body>
    <div id="container">
        <header>
            <div id="title">
                <h1><img src="@Url.Content("~/Assets/branding.png")" alt="Liberty Corner School - A Caring Community"/></h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>   
                <ul id="nav" class="dropdown dropdown-horizontal">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { Area = "" }, new { })</li>
                    <li><a href="#">News</a>
                        <ul>
                        <li>@Html.ActionLink("PTO News", "Index", "News", new { Area = "", category = "news", id = "" }, new { })</li>
                        <li>@Html.ActionLink("LCS Staff/Administration News", "Index", "News", new { Area = "", category = "staff", id = "" }, new { })</li>
                        <li>@Html.ActionLink("Meeting Minutes", "Index", "Content", new { id="meeting-minutes", Area = "" }, new { })</li>
                        <li>@Html.ActionLink("Newsletters", "Index", "Content", new { id = "newsletters", Area = "" }, new { } )</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("About", "Index", "Content", new { id = "about", Area = "" }, new { })</li>
                    <li>@Html.ActionLink("Contact", "Index", "Content", new { id="contact", Area = "" }, new { })</li>
                    <li>@Html.ActionLink("Flyers & Forms", "Index", "Content", new { id="flyers-and-forms" }, new{})</li>
                    <li>@Html.ActionLink("Calendar", "Index", "Calendar", new { Area = "" }, new { })</li>
                    <li>@Html.ActionLink("Photo Gallery", "Index", "Gallery", new { Area = "" } , new { })</li>
                    <li>@Html.ActionLink("Links", "Index", "Content", new { id = "links", Area = "" }, new { })
                        <ul>
                            <li>@Html.ActionLink("Helpful Links", "Index", "Content", new { id = "links", Area = "" }, new { })</li>
                            <li><a href="http://www.bernardsboe.com">BOE Site</a></li>
                            <li><a href="http://www.bernardsboe.com/BernardsBOE/LCS_Info.aspx">LCS Site</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
            <div style="clear: both;"></div>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        Powered by Elix CMS
        </footer>
    </div>
</body>
</html>
