<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Assets/ElixCMS/css/ElixCMS.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/dropdown.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/dropdown.default.ultimate.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Assets/ElixCMS/css/demo_table.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Assets/ElixCMS/jquery.dataTables.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    @RenderSection("head", false)

    <script type="text/javascript">
        jQuery(document).ready(function () {
            jQuery(".datatable").dataTable({
                "sPaginationType": "full_numbers"
            });
        });
    </script>
</head>
<body>
    <div id="container">
        <header>
            <div id="title">
                <h1>Site Administration</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div style="clear: both;"></div>
            <nav>   
                <ul id="nav" class="dropdown dropdown-horizontal">
                    @{ 
                        var AdminArea = new { Area = "Admin" };
                        var Attributes = new {};
                    }
                    <li>@Html.ActionLink("Home", "Index", "Home", AdminArea, Attributes)</li>
                    
                    <li>@Html.ActionLink("Users", "Index", "UserAdministration", AdminArea, Attributes)</li>
                    <li>@Html.ActionLink("Calendar", "Index", "AdminCalendar", AdminArea, Attributes)</li>
                    <li>@Html.ActionLink("Forms", "Index", "AdminForms", AdminArea, Attributes)</li>
                    <li>@Html.ActionLink("Pages", "Index", "AdminContent", AdminArea, Attributes)</li>
                </ul>
            </nav>
            <div style="clear: both;"></div>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        Powered by Elix CMS
        </footer>
    </div>
</body>
</html>
