@model Dinamico.Models.ContentPart
<section id="fluidGridSystem">
    <div class="container-fluid" style="padding: 0;">
    <div class="row show-grid columns threecolumns clearfix @((bool)(Content.Data.Separator ?? false) ? "separator" : "")">
	    <div class="column column1 col-xs-4">
		    @{ Html.DroppableZone("Left").Render(); }
	    </div>
	    <div class="column column2 col-xs-4">
		    @{ Html.DroppableZone("Center").Render(); }
	    </div>
	    <div class="column column3 col-xs-4">
		    @{ Html.DroppableZone("Right").Render(); }
	    </div>
    </div>
    </div>
</section>
