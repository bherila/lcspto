@section page {

    <div class="row">
        <div class="col-md-7">

            <!-- image -->
            @{ Html.RenderPartial("LayoutPartials/PreContent"); }

            <!-- text -->
	        @Content.Render.Tokens("Text").Wrap(@<div id="content">@item.RenderContents()</div>)
            
