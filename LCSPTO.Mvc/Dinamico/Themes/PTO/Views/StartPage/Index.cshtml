            @{ Html.DroppableZone("News").Render(); }

        </div>
        <div class="col-md-4">

            <!-- events --> 
            @{ Html.DroppableZone("Events").Render(); }

        </div>
    </div>
    <div class="row">@{ Html.RenderPartial("LayoutPartials/PostContent"); }</div>

}